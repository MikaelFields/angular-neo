{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@angular-neo/neo-button": ["libs/components/button-lib/src/index.ts"],
      "@angular-neo/neo-card": ["libs/components/card-lib/src/index.ts"],
      "@angular-neo/neo-elements": ["libs/core/elements-lib/src/index.ts"],
      "@angular-neo/neo-theme": ["libs/core/theme-lib/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
